<div class="item">
    <div>Avatar URL</div>
    <input
        type="url"
        name="avatar_url"
        placeholder="http://..."
        value="{{ student.avatar_url }}"
    >
</div>

<div class="item">
    <div>Nome</div>
    <input
        type="text"
        id="name"
        name="name"
        placeholder="Nome Sobrenome"
        value="{{ student.name }}"
    >
</div>

<div class="item">
    <div>Data de nascimento</div>
    <input
        type="date"
        name="birth"
        value="{{ student.birth }}"
    >
</div>

<div class="item">
    <div>E-mail</div>
    <input
        type="email"
        name="email"
        value="{{ student.email }}"
    >
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="school_year">
            <option value="5EF" {% if student.school_year == "5EF" %}selected{% endif %}>
                5º Ano - Ensino Fundamental II
            </option>
            <option value="6EF" {% if student.school_year == "6EF" %}selected{% endif %}>
                6º Ano - Ensino Fundamental II
            </option>
            <option value="7EF" {% if student.school_year == "7EF" %}selected{% endif %}>
                7º Ano - Ensino Fundamental II
            </option>
            <option value="8EF" {% if student.school_year == "8EF" %}selected{% endif %}>
                8º Ano - Ensino Fundamental II
            </option>
            <option value="9EF" {% if student.school_year == "9EF" %}selected{% endif %}>
                9º Ano - Ensino Fundamental II
            </option>
            <option value="1EM" {% if student.school_year == "1EM" %}selected{% endif %}>
                1º Ano - Ensino Médio
            </option>
            <option value="2EM" {% if student.school_year == "2EM" %}selected{% endif %}>
                2º Ano - Ensino Médio
            </option>
            <option value="3EM" {% if student.school_year == "3EM" %}selected{% endif %}>
                3º Ano - Ensino Médio
            </option>
            
        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária</div>
    <input
        type="number"
        name="workload"
        value="{{ student.workload }}"
    >
</div>