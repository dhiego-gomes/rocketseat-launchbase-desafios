{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="card__image" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Detalhes do Perfil</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>{{ student.avatar_url }}</div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ student.birth }}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{ student.email }}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{ student.school_year }}</div>
            </div>

            <div class="item">
                <div>Carga Horária</div>
                <div>{{ student.workload }}</div>
            </div>

            <a class="button" href="/students/{{ student.id }}/edit">EDITAR</a>

        </section>

    </div>

{% endblock content %}