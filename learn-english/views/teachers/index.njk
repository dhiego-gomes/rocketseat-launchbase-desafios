{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        
        <a href="/teachers/create">Novo Professor</a>
        
        <table width="100%">
            <thead>
                <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </th>
            </thead>
            <tbody>
                {% for teacher in teachers %}                
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.avatar_url }})"></span>
                            {{ teacher.name }}</td>
                        <td>
                            {% for service in teacher.services %}
                                <span>{{ service }}</span>
                            {% endfor %}
                        </td>
                        <td><a href="/teachers/{{ teacher.id }}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <input
            type="hidden"
            id="{{ teacher.id }}"
        >
        
    </div>

{% endblock content %}