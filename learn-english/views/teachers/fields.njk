<div class="item">
    <div>Avatar URL</div>
    <input
        type="url"
        name="avatar_url"
        placeholder="http://..."
        value="{{ teacher.avatar_url }}"
    >
</div>

<div class="item">
    <div>Nome</div>
    <input
        type="text"
        id="name"
        name="name"
        placeholder="Nome Sobrenome"
        value="{{ teacher.name }}"
    >
</div>

<div class="item">
    <div>Data de nascimento</div>
    <input
        type="date"
        name="birth"
        value="{{ teacher.birth }}"

    >
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
        <option value="high_school"
            {% if teacher.education_level == "high_school" %}
                selected="selected"
            {% endif %}>Ensino Médio Completo
        </option>
        <option value="undergraduate"
            {% if teacher.education_level == "undergraduate" %}
                selected="selected"
            {% endif %}
            >Ensino Superior Completo
        </option>
        <option value="masters_degree"
            {% if teacher.education_level == "masters_degree" %}
                selected="selected"
            {% endif %}
            >Mestrado
        </option>          
        <option value="phd"
            {% if teacher.education_level == "phd" %}
                selected="selected"
            {% endif %}
            >Doutorado
        </option> 
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input
                type="radio"
                name="type_class"
                value="remotely"
                {% if teacher.type_class == "remotely" %}
                    checked
                {% endif %}
                >À distância
            </input>
        </span>
        <span>
            <input
                type="radio"
                name="type_class"
                value="in_person"
                {% if teacher.type_class == "in_person" %}
                    checked
                {% endif %}
                >Presencial
            </input>
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <input
        type="text"
        name="services"
        placeholder="Escreva as matérias separando com vírgula."
        value="{{ teacher.services }}"
    >
</div>