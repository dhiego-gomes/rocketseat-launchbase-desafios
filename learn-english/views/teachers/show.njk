{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="card__image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Detalhes do Perfil</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>{{ teacher.avatar_url }}</div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>{{ teacher.birth }}</div>
            </div>

<div class="item">
    <div>Idade</div>
    <div>
        {{ teacher.age }}
            {% if teacher.age > 1 %} anos 
            {% else %} ano 
            {% endif%}
    </div>
</div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.education_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    {% if teacher.type_class == 'in_person' %}
                        <span>Presencial</span>
                    {% elif teacher.type_class == 'remotely' %}
                        <span>À distância</span>
                    {% else %}
                        <span>Mentoria</span>
                    {% endif %}
                </div>
            </div>

            <div class="item">
                <div>Especialidades</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a class="button" href="/teachers/{{ teacher.id }}/edit">EDITAR</a>

        </section>

    </div>

{% endblock content %}